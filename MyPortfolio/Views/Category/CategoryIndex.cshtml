@model List<MyPortfolio.Models.Category>
@{
    ViewBag.Title = "CategoryIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td> @Html.ActionLink("Sil","DeleteCategory", new { id=item.CategoryID}, new {@class="btn btn-outline-danger", onclick="return confirm('Gerçekten Silmek İstiyor Musunuz?')"})</td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Category/CreateCategory" class="btn btn-info">Yeni Kategori Girişi</a>
