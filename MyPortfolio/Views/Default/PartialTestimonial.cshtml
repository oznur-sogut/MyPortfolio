@model List <MyPortfolio.Models.Testimonial>
<section class="w3l-clients" id="skills">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                <div class="col-lg-6 align-self">
                    <div class="position-relative px-lg-5">
                        <img src="~/Templates/iportfolio-starter/assets/images/clients.png" alt="" class="radius-image img-fluid">
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5">
                    <span class="text">Referanslarım</span>
                    <h3 class="title-big">İnsanlar <span>Hakkımda</span> ne dedi?</h3>
                    <div id="owl-demo1" class="owl-carousel owl-theme mt-4 py-2 mb-4">
                        @foreach (var item in Model)
                        {
                            <div class="item">
                                <div class="testimonial-content">
                                    <div class="testimonial">
                                        <blockquote>
                                            <q>
                                                @item.TestimonialComment
                                            </q>
                                        </blockquote>
                                        <div class="testi-des">
                                            <div class="test-img">
                                                <img src="@item.TestimonialImageUrl" class="img-fluid"
                                                     alt="client-img">
                                            </div>
                                            <div class="peopl align-self">
                                                <h3>@item.TestimonialNameSurname</h3>
                                                <p class="indentity">@item.TestimonialTitle</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
