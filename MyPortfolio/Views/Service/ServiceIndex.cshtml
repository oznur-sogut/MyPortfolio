@model List<MyPortfolio.Models.Service>
@{
    ViewBag.Title = "ServiceIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyimlerim Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <td> ID</td>
        <td>Deneyim Adı</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.ServiceName</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/CreateService" class="btn btn-info">Yeni Deneyim Ekle</a>

